<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FizikaTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Added this code for customize light mode-->
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryVariant">#0D47A1</item>
        <!-- Ikkinchi darajali rang (Koâ€˜kimtir-Yashil) -->
        <item name="colorSecondary">#00897B</item>
        <item name="colorSecondaryVariant">#00695C</item>
        <!-- Fon va sirtlar -->
        <item name="colorSurface">#FFFFFF</item>
        <!-- Matn ranglari -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnBackground">#212121</item>
        <item name="colorOnSurface">#424242</item>
        <!-- Maxsus ranglar -->
        <item name="colorError">#D32F2F</item>
    </style>

    <style name="Theme.FizikaTest" parent="Base.Theme.FizikaTest"/>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="VariantStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/style_test_default_answer</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">click</item>
    </style>
    <style name="TestCountStyle">
        <item name="android:layout_width">11.5dp</item>
        <item name="android:layout_height">11.5dp</item>
        <item name="android:background">@drawable/style_test_count</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:layout_marginStart">0.5dp</item>
    </style>
    <style name="PrivacyPolicyTextBlockStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PrivacyPolicyTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTestCorrectAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleTestWrongAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StyleTestDefaultAnswer">
        <item name="android:background">@drawable/style_test_correct_answer</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>